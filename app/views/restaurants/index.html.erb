<div class="container">
  <h1>Restaurants</h1>

  <% @restaurants.each do |restaurant| %>
      <li style="list-style: none;"><%= link_to restaurant.name, restaurant_path(restaurant)  %> - <%= restaurant.category %></li>
  <% end %>

  <%= link_to 'Add a new restaurant', new_restaurant_path, class: "btn btn-primary" %>
</div>
